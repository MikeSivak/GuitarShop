    {{#each content}}
    <div id="main-content">
        <div class="container" id="container">
            <div class="row" id="row">
                <div class="col-md-8">
                    <div class="panel panel-default  panel--styled">
                        <div class="panel-body">
                            <div class="col-md-12 panelTop">
                                <div class="col-md-4">
                                    <img class="img-responsive" src="/images/{{this.picture_path}}" alt="" />
                                </div>
                                <div class="col-md-8">
                                    <h2>{{'manufacturer.title'}} (Model: {{this.model}})</h2>
                                        {{this.descript}}
                                </div>
                            </div>

                            <div class="col-md-12 panelBottom">
                                <div class="col-md-4 text-center">
                                    <form method="POST" action="/content/buy">
                                        <input id="hidden-field" name="id" type="hidden" value="{{this.id}}">
                                        <button class="btn btn-lg btn-add-to-cart"><span
                                            class="glyphicon glyphicon-shopping-cart"></span> Make an order</button>
                                    </form>
                                    
                                </div>
                                <div class="col-md-4 text-left">
                                    <h3>Price: <span class="itemPrice">${{this.price}}</span></h3>
                                </div>
